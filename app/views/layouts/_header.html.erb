<div class="top-bar">
      <div class="container">
                    
            <div class="pull-right">
                    <ul class="info list-inline hidden-xs">
                         <% if user_signed_in? %>

                          <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">My Tuition <b class="caret"></b></a>
                            <ul class="dropdown-menu">
                              <li><%= link_to "Tutor page", tutors_path %></li>                  
